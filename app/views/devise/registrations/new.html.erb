<h2 class="text-center mb-3">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :name, "お名前", class: "form-label" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <% if @minimum_password_length %>
    <em>(最低 <%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "パスワード再確認", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :profile_image, "プロフィール画像", class: "form-label" %><br />
    <%= f.file_field :profile_image, class: "form-control" %>
  </div>

  <div class="mb-5">
    <%= f.label :bio, "自己紹介", class: "form-label" %><br />
    <%= f.text_area :bio, class: "form-control" %>
  </div>

  <div class="text-center mb-3">
    <%= f.submit "登録", class: "btn btn-outline-primary" %>
  </div>
<% end %>
