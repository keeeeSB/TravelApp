<h2 class="text-center mb-3">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, "パスワード", class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="text-center mb-4">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
    </div>
  <% end %>

  <div class="text-center mb-3">
    <%= f.submit "ログイン", class: "btn btn-outline-success" %>
  </div>
<% end %>
