<div class="card">
  <%= image_tag @post.image, class: "card-img-top", alt: "カードイメージ" %>
  <div class="card-body">
    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text"><%= @post.body %></p>
  </div>

  <div class="d-flex justify-content-end mt-4">
    <%= link_to "編集", edit_user_post_path(current_user, @post), class: "btn btn-outline-warning me-2" %>
    <%= link_to "削除", user_event_path(current_user, @ppost), class: "btn btn-outline-danger",
                    data: { turbo-method: :delete, turbo_confirm: "本当に削除しますか？" } %>
  </div>
</div>
